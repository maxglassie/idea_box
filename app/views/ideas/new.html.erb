<%= form_for(@idea) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :image %>
    <%= f.text_field :image %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <%= f.submit %>
<% end %>